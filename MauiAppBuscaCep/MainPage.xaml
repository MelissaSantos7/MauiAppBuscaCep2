<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppBuscaCep.MainPage">

    <Stacklayout Orientation="Horizontal">
        <Entry x:Name="txt_cep" HorizontalOptions="FillandExpand"/>
        <Button x:Name="txt_cep" Clicked = ""/>
    </Stacklayout>

    <Grid RowDefinitions="*, *, *, *, *, *, *, *, *, *" ColumnDefinitions="*, 2*"
        <Label Grid.Row="0" Grid.Column="0" Text="id_logradouro"/>
        <Label Grid.Row="0" Grid.Column="1" Text="{Binding id_logradouro}"/>

        <Label Grid.Row="1" Grid.Column="0" Text="id_cidade"/>
        <Label Grid.Row="1" Grid.Column="1" Text="{Binding id_cidade}"/>

        <Label Grid.Row="2" Grid.Column="0" Text="tipo"/>
        <Label Grid.Row="2" Grid.Column="1" Text="{Binding tipo}"/>

        <Label Grid.Row="2" Grid.Column="0" Text="tipo"/>
        <Label Grid.Row="2" Grid.Column="1" Text="{Binding tipo}"/>

        <Label Grid.Row="1" Grid.Column="0" Text="descricao"/>
        <Label Grid.Row="1" Grid.Column="1" Text="{Binding descricao}"/>

        <Label Grid.Row="2" Grid.Column="0" Text="uf"/>
        <Label Grid.Row="2" Grid.Column="1" Text="{Binding tipo}"/>
    </Grid>



</ContentPage>
